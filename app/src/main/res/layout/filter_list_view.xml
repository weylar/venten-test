<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="filter"
            type="com.idris.aminu.android.models.FilterElement" />

        <variable
            name="clickListener"
            type="com.idris.aminu.android.view.filterList.FilterClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        app:contentPadding="@dimen/space_16"
        app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{() -> clickListener.onClick(filter)}">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="1990-2010"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textAlignment="center"
           android:textSize="24sp"
           app:years="@{filter}"
           android:layout_margin="@dimen/tiny_space" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Female"
            android:background="@drawable/country_bg"
            android:textColor="@color/black"
            android:paddingStart="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            android:textSize="16sp"
            app:gender="@{filter}"
            android:textAlignment="center"
            android:layout_margin="@dimen/tiny_space"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Country"
                android:gravity="center"
                android:orientation="horizontal"
                android:textSize="18sp"
                app:countries="@{filter}"
                android:layout_margin="@dimen/tiny_space">




            </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:colors="@{filter}"
            android:layout_margin="@dimen/tiny_space"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>